<?xml version="1.0" encoding="UTF-8"?>
<rss xmlns:dc="http://purl.org/dc/elements/1.1/" xmlns:content="http://purl.org/rss/1.0/modules/content/" xmlns:atom="http://www.w3.org/2005/Atom" version="2.0" xmlns:media="http://search.yahoo.com/mrss/">
  <channel>
    <title><![CDATA[{{ site.title }}]]></title>
    <description><![CDATA[{{ site.description }}]]></description>
    <link>{{ site.url }}</link>
    <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
    <atom:link rel="self" type="application/atom+xml" href="https://soffes.blog/feeds/rss" />
    <ttl>60</ttl>

    {% for post in site.posts %}
    <item>
      <title><![CDATA[{{ post.title }}]]></title>
        <description><![CDATA[{{ post.excerpt }}<p><a href="{{ post.url | prepend: site.url }}">Continue reading â†’</a></p>]]></description>
        <link>{{ post.url | prepend: site.url }}</link>
        <guid isPermaLink="true">{{ post.url | prepend: site.url }}</guid>
        <dc:creator><![CDATA[{{ site.author }}]]></dc:creator>
        <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
    </item>
    {% endfor %}
  </channel>
</rss>
